<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="@color/gray"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/gray"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_note"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#6BC235"
            android:text="记事本"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/note"
            android:paddingTop="35dp"
            />
        <Button
            android:id="@+id/btn_contacts"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#DCA297"
            android:text="通讯录"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/contacts"
            android:paddingTop="35dp"/>
        <Button
            android:id="@+id/btn_calculator"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#01A5AF"
            android:text="计算器"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/calculator"
            android:paddingTop="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/gray"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_weather"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#DE9C53"
            android:text="天气"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/weather"
            android:padding="35dp"/>
        <Button
            android:id="@+id/btn_express"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#23EBB9"
            android:text="快递查询"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/express"
            android:padding="35dp"/>
    </LinearLayout>

</LinearLayout>
